#include <iostream>
#include <cstdio>
#define m 1000000007
using namespace std;

int main() {
	int t;
	scanf("%d",&t);
	while(t--)
	{
	    unsigned long long n;
	    scanf("%lld",&n);
	    if (n==1)
	    {
	    printf("2\n");
	    continue;
	    }
	    n-=2;
	    unsigned long long a,b,c,d,e,f,g,h;
	    a=2;b=0;c=0;d=7;
	    e=0;f=2;g=1;h=1;
	    while(n>0)
	    {
	        if (n&1)
	        {
	           unsigned long long a1=(a*e+b*g)%m;
	           unsigned long long b1=(a*f+b*h)%m;
	           unsigned long long c1=(c*e+d*g)%m;
	           unsigned long long d1=(c*f+d*h)%m;
	           a=a1;b=b1;c=c1;d=d1;
	        }
	        unsigned long long e1=(e*e+f*g)%m;
	        unsigned long long f1=(e*f+f*h)%m;
	        unsigned long long g1=(g*e+g*h)%m;
	        unsigned long long h1=(g*f+h*h)%m;
	        e=e1;f=f1;g=g1;h=h1;
	        n/=2;
	    }
	    printf("%lld\n",((b+d)%m));
	    
	}
	
	return 0;
}
